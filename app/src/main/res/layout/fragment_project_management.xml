<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray5"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray1"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/progress_management"
                        android:textColor="@color/text_com_color"
                        android:textSize="@dimen/sp17" />

                    <ImageView
                        android:id="@+id/progress_management"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/arrow" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray3"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/progress_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></com.github.mikephil.charting.charts.PieChart>

                        <TextView
                            android:id="@+id/percent"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text="123"
                            android:textSize="@dimen/sp10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="盾构机当前环数:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="今日完成环数:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="昨日完成环数:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="七日完成环数:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/current_ring"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/today_rings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/yesterday_rings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/week_rings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:background="@color/gray1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray1"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/safety_management"
                        android:textColor="@color/text_com_color"
                        android:textSize="@dimen/sp17" />

                    <ImageView
                        android:id="@+id/safety_management"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/arrow" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray3"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@mipmap/project_safety_img" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="当前风险源:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="临近风险源:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="总风险源:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="当前异常工况:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="临近异常工况:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="总异常工况:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/current_risk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/coming_risk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/total_risk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/current_working_condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/coming_working_condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/total_working_condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:background="@color/gray1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray1"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/equipment_management"
                        android:textColor="@color/text_com_color"
                        android:textSize="@dimen/sp17" />

                    <ImageView
                        android:id="@+id/equipment_management"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/arrow" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray3"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="8dp"
                        android:layout_weight="1">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/equipment_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></com.github.mikephil.charting.charts.PieChart>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="设备名称:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="今日状态:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:paddingRight="7dp"
                                android:gravity="right"
                                android:text="累计掘进环数:"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/equipment_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/today_condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/total_rings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_com_color"
                                android:textSize="@dimen/sp13" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:background="@color/gray1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray1"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/quality_management"
                        android:textColor="@color/text_com_color"
                        android:textSize="@dimen/sp17" />

                    <ImageView
                        android:id="@+id/quality_management"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/arrow" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray3"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="8dp"
                        android:layout_weight="1">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/quality_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></com.github.mikephil.charting.charts.PieChart>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/normal_rings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/project_green_circle"
                                android:drawablePadding="5dp"
                                android:textSize="@dimen/sp13"
                                android:textColor="@color/text_com_color"
                                android:text="正常环数111"/>

                            <TextView
                                android:id="@+id/abnormal_rings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/project_red_circle"
                                android:drawablePadding="5dp"
                                android:textSize="@dimen/sp13"
                                android:textColor="@color/text_com_color"
                                android:text="异常环数"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray1"></View>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>