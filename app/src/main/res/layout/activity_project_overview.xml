<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-2dp"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/radio"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="项目概览"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@mipmap/back_white" />

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/sp15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingTop="20dp"
                        android:text="项目：" />

                    <TextView
                        android:id="@+id/project"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:paddingTop="20dp"
                        android:text="项目" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/sp10"
                        android:text="计划工期:" />

                    <TextView
                        android:id="@+id/plan_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:text="计划工期" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/sp10"
                        android:text="区间里程:" />

                    <TextView
                        android:id="@+id/interval_mileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:text="区间里程" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/sp10"
                        android:text="地质条件:" />

                    <TextView
                        android:id="@+id/condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:text="地质条件" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/sp10"
                        android:text="线路线型:" />

                    <TextView
                        android:id="@+id/line_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:text="线路线型" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/sp10"
                        android:text="管片规格:" />

                    <TextView
                        android:id="@+id/tube"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:text="管片规格" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/sp10"
                        android:text="拟投入资源:" />

                    <TextView
                        android:id="@+id/tbm_resource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:text="拟投入资源" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/sp10"
                        android:text="项目经理:" />

                    <TextView
                        android:id="@+id/manager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:paddingBottom="5dp"
                        android:text="项目经理" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/sp20"
                    android:paddingTop="5dp"
                    android:text="平面图"
                    android:textSize="@dimen/sp16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/plane_graph_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>

                    <com.shizhefei.view.indicator.FixedIndicatorView
                        android:id="@+id/plane_graph_indicator"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignBottom="@+id/plane_graph_viewpager"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/sp20"
                    android:paddingTop="5dp"
                    android:text="纵断面图"
                    android:textSize="@dimen/sp16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/profile_map_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></android.support.v4.view.ViewPager>

                    <com.shizhefei.view.indicator.FixedIndicatorView
                        android:id="@+id/profile_map_indicator"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignBottom="@+id/profile_map_viewpager"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
