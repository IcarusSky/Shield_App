<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/radio"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <!--返回键-->
        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="21dp"
                android:src="@mipmap/back_white"/>
        <!--标题（质量管理）-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="110dp"
                android:padding="4dp"
                android:text="质量管理"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>
    <!--下方页面-->
    <!--<android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <!--线路质量排名列表-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线路质量排名列表"
                android:textSize="16dp"
                android:padding="5dp"
                android:layout_marginBottom="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="7dp"
            android:background="@color/line_gray" />
        <!--饼状图-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingTop="7dp"
                android:paddingBottom="8dp"
                android:layout_weight="1">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/quality_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.github.mikephil.charting.charts.PieChart>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/project_green_circle"
                        android:drawablePadding="5dp"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/text_com_color"
                        android:text="优：%5以下不良率"/>

                    <TextView
                        android:id="@+id/medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/project_yellow_circle"
                        android:drawablePadding="5dp"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/text_com_color"
                        android:text="中：5%-10%不良率"/>
                    <TextView
                        android:id="@+id/bad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/project_red_circle"
                        android:drawablePadding="5dp"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/text_com_color"
                        android:text="差：10%以上不良率"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--轮播列表-->
        <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.crec.shield.definedviewpager.CustomViewPager
            android:id="@+id/vp_ProjectQualityList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:padding="4dp" />
            <LinearLayout
                android:id="@+id/dot_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal" />
        </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <!--</android.support.v4.widget.NestedScrollView>-->
</LinearLayout>