<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <Button
        android:id="@+id/btItem"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintTop_toTopOf="@id/tvItemPlaceholder"
        app:layout_constraintBottom_toBottomOf="@id/tvItemPlaceholder"
        app:layout_constraintLeft_toLeftOf="@id/tvItemPlaceholder"
        app:layout_constraintRight_toRightOf="@id/tvItemPlaceholder"
        android:text="查看"
        android:textColor="@color/text_com_color"
        android:textSize="11sp"/>
</android.support.constraint.ConstraintLayout>